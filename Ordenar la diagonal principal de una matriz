#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Ingrese el tamaÃ±o de la matriz cuadrada (n x n): ";
    cin >> n;

    int matriz[100][100];

    cout << "Ingrese los elementos de la matriz:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> matriz[i][j];
        }
    }

    int diagonal[100];
    for (int i = 0; i < n; i++) {
        diagonal[i] = matriz[i][i];
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (diagonal[j] > diagonal[j + 1]) {
                int temp = diagonal[j];
                diagonal[j] = diagonal[j + 1];
                diagonal[j + 1] = temp;
            }
        }
    }

    for (int i = 0; i < n; i++) {
        matriz[i][i] = diagonal[i];
    }

    cout << "Matriz con la diagonal principal ordenada:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << matriz[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
